<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#111111"
    android:paddingLeft="16dp"
    android:paddingRight="16dp" >


    <TextView
        android:id="@+id/calculatorScreen"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="@string/calculatorScreen"
        android:textSize="50sp" />

    <Button
        android:id="@+id/clear"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:layout_below="@id/calculatorScreen"
        android:layout_alignParentStart="true"
        android:layout_margin="@dimen/button_margin"
        android:layout_marginStart="@dimen/button_margin"
        android:layout_marginTop="@dimen/button_margin"
        android:layout_marginEnd="@dimen/button_margin"
        android:background="@drawable/round_button"
        android:gravity="center_vertical|center_horizontal"
        android:onClick="onClickClear"
        android:text="@string/clear"
        android:textColor="@color/white_sign"
        android:textSize="30sp" />

    <Button
        android:id="@+id/plus_minus"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:layout_below="@id/calculatorScreen"
        android:layout_marginStart="@dimen/button_margin"
        android:layout_marginTop="@dimen/button_margin"
        android:layout_marginEnd="@dimen/button_margin"
        android:layout_marginBottom="@dimen/button_margin"
        android:layout_toEndOf="@id/clear"
        android:background="@drawable/round_button"
        android:gravity="center_vertical|center_horizontal"
        android:onClick="onClickOperator"
        android:text="@string/plus_minus"
        android:textColor="@color/white_sign"
        android:textSize="30sp" />

    <Button
        android:id="@+id/percent"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:layout_below="@id/calculatorScreen"
        android:layout_margin="@dimen/button_margin"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toEndOf="@id/plus_minus"
        android:background="@drawable/round_button"
        android:gravity="center_vertical|center_horizontal"
        android:onClick="onClickOperator"
        android:text="@string/percent"
        android:textColor="@color/white_sign"
        android:textSize="33sp" />

    <Button
        android:id="@+id/division"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:layout_below="@id/calculatorScreen"
        android:layout_marginStart="@dimen/button_margin"
        android:layout_marginTop="@dimen/button_margin"
        android:layout_marginEnd="@dimen/button_margin"
        android:layout_marginBottom="@dimen/button_margin"
        android:layout_toEndOf="@id/percent"
        android:background="@drawable/round_button"
        android:gravity="center_vertical|center_horizontal"
        android:onClick="onClickOperator"
        android:text="@string/division"
        android:textColor="@color/white_sign"
        android:textSize="38sp" />

    <Button
        android:id="@+id/number_7"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:layout_below="@id/clear"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/button_margin"
        android:layout_marginTop="@dimen/button_margin"
        android:layout_marginEnd="@dimen/button_margin"
        android:layout_marginBottom="@dimen/button_margin"
        android:background="@drawable/round_button"
        android:gravity="center_vertical|center_horizontal"
        android:onClick="onClickNumber"
        android:text="@string/number_7"
        android:textColor="@color/white_sign"
        android:textSize="30sp" />

    <Button
        android:id="@+id/number_8"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:layout_below="@id/plus_minus"
        android:layout_marginStart="@dimen/button_margin"
        android:layout_marginTop="@dimen/button_margin"
        android:layout_marginEnd="@dimen/button_margin"
        android:layout_marginBottom="@dimen/button_margin"
        android:layout_toEndOf="@id/number_7"
        android:background="@drawable/round_button"
        android:gravity="center_vertical|center_horizontal"
        android:onClick="onClickNumber"
        android:text="@string/number_8"
        android:textColor="@color/white_sign"
        android:textSize="30sp" />

    <Button
        android:id="@+id/number_9"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:layout_below="@id/percent"
        android:layout_marginStart="@dimen/button_margin"
        android:layout_marginTop="@dimen/button_margin"
        android:layout_marginEnd="@dimen/button_margin"
        android:layout_marginBottom="@dimen/button_margin"
        android:layout_toEndOf="@id/number_8"
        android:background="@drawable/round_button"
        android:gravity="center_vertical|center_horizontal"
        android:onClick="onClickNumber"
        android:text="@string/number_9"
        android:textColor="@color/white_sign"
        android:textSize="30sp" />

    <Button
        android:id="@+id/multiplication"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:layout_below="@id/division"
        android:layout_marginStart="@dimen/button_margin"
        android:layout_marginTop="@dimen/button_margin"
        android:layout_marginEnd="@dimen/button_margin"
        android:layout_marginBottom="@dimen/button_margin"
        android:layout_toEndOf="@id/number_9"
        android:background="@drawable/round_button"
        android:gravity="center_vertical|center_horizontal"
        android:onClick="onClickOperator"
        android:text="@string/multiplication"
        android:textColor="@color/white_sign"
        android:textSize="30sp" />

    <Button
        android:id="@+id/number_4"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:layout_below="@id/number_7"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/button_margin"
        android:layout_marginTop="@dimen/button_margin"
        android:layout_marginEnd="@dimen/button_margin"
        android:layout_marginBottom="@dimen/button_margin"
        android:background="@drawable/round_button"
        android:gravity="center_vertical|center_horizontal"
        android:onClick="onClickNumber"
        android:text="@string/number_4"
        android:textColor="@color/white_sign"
        android:textSize="30sp" />

    <Button
        android:id="@+id/number_5"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:layout_below="@id/number_8"
        android:layout_marginStart="@dimen/button_margin"
        android:layout_marginTop="@dimen/button_margin"
        android:layout_marginEnd="@dimen/button_margin"
        android:layout_marginBottom="@dimen/button_margin"
        android:layout_toEndOf="@id/number_4"
        android:background="@drawable/round_button"
        android:gravity="center_vertical|center_horizontal"
        android:onClick="onClickNumber"
        android:text="@string/number_5"
        android:textColor="@color/white_sign"
        android:textSize="30sp" />

    <Button
        android:id="@+id/number_6"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:layout_below="@id/number_9"
        android:layout_marginStart="@dimen/button_margin"
        android:layout_marginTop="@dimen/button_margin"
        android:layout_marginEnd="@dimen/button_margin"
        android:layout_marginBottom="@dimen/button_margin"
        android:layout_toEndOf="@id/number_5"
        android:background="@drawable/round_button"
        android:gravity="center_vertical|center_horizontal"
        android:onClick="onClickNumber"
        android:text="@string/number_6"
        android:textColor="@color/white_sign"
        android:textSize="30sp" />

    <Button
        android:id="@+id/minus"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:layout_below="@id/multiplication"
        android:layout_marginStart="@dimen/button_margin"
        android:layout_marginTop="@dimen/button_margin"
        android:layout_marginEnd="@dimen/button_margin"
        android:layout_marginBottom="@dimen/button_margin"
        android:layout_toEndOf="@id/number_6"
        android:background="@drawable/round_button"
        android:gravity="center_vertical|center_horizontal"
        android:onClick="onClickOperator"
        android:text="@string/minus"
        android:textColor="@color/white_sign"
        android:textSize="38sp" />

    <Button
        android:id="@+id/number_1"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:layout_below="@id/number_4"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/button_margin"
        android:layout_marginTop="@dimen/button_margin"
        android:layout_marginEnd="@dimen/button_margin"
        android:background="@drawable/round_button"
        android:gravity="center_vertical|center_horizontal"
        android:onClick="onClickNumber"
        android:text="@string/number_1"
        android:textColor="@color/white_sign"
        android:textSize="30sp"
        android:layout_marginBottom="@dimen/button_margin" />

    <Button
        android:id="@+id/number_2"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:layout_below="@id/number_5"
        android:layout_marginStart="@dimen/button_margin"
        android:layout_marginTop="@dimen/button_margin"
        android:layout_marginEnd="@dimen/button_margin"
        android:layout_marginBottom="@dimen/button_margin"
        android:layout_toEndOf="@id/number_1"
        android:background="@drawable/round_button"
        android:gravity="center_vertical|center_horizontal"
        android:onClick="onClickNumber"
        android:text="@string/number_2"
        android:textColor="@color/white_sign"
        android:textSize="30sp" />

    <Button
        android:id="@+id/number_3"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:layout_below="@id/number_6"
        android:layout_marginStart="@dimen/button_margin"
        android:layout_marginTop="@dimen/button_margin"
        android:layout_marginEnd="@dimen/button_margin"
        android:layout_marginBottom="@dimen/button_margin"
        android:layout_toEndOf="@id/number_2"
        android:background="@drawable/round_button"
        android:gravity="center_vertical|center_horizontal"
        android:onClick="onClickNumber"
        android:text="@string/number_3"
        android:textColor="@color/white_sign"
        android:textSize="30sp" />

    <Button
        android:id="@+id/number_0"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:layout_below="@id/number_1"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/button_margin"
        android:layout_marginTop="@dimen/button_margin"
        android:layout_marginEnd="@dimen/button_margin"
        android:layout_marginBottom="@dimen/button_margin"
        android:background="@drawable/round_button"
        android:gravity="center_vertical|center_horizontal"
        android:onClick="onClickNumber"
        android:text="@string/number_0"
        android:textColor="@color/white_sign"
        android:textSize="30sp" />

    <Button
        android:id="@+id/plus"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:layout_below="@id/minus"
        android:layout_marginStart="@dimen/button_margin"
        android:layout_marginTop="@dimen/button_margin"
        android:layout_marginEnd="@dimen/button_margin"
        android:layout_marginBottom="@dimen/button_margin"
        android:layout_toEndOf="@id/number_3"
        android:background="@drawable/round_button"
        android:gravity="center_vertical|center_horizontal"
        android:onClick="onClickOperator"
        android:text="@string/plus"
        android:textColor="@color/white_sign"
        android:textSize="38sp" />

    <Button
        android:id="@+id/dot"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:layout_below="@id/number_2"
        android:layout_marginStart="@dimen/button_margin"
        android:layout_marginTop="@dimen/button_margin"
        android:layout_marginEnd="@dimen/button_margin"
        android:layout_toEndOf="@id/number_0"
        android:background="@drawable/round_button"
        android:gravity="center_vertical|center_horizontal"
        android:onClick="onClickOperator"
        android:text="@string/dot"
        android:textColor="@color/white_sign"
        android:textSize="38sp"
        android:layout_marginBottom="@dimen/button_margin" />

    <Button
        android:id="@+id/result"
        android:layout_width="180dp"
        android:layout_height="@dimen/button_height"
        android:layout_below="@id/number_3"
        android:layout_marginStart="@dimen/button_margin"
        android:layout_marginTop="@dimen/button_margin"
        android:layout_marginEnd="@dimen/button_margin"
        android:layout_marginBottom="@dimen/button_margin"
        android:layout_toEndOf="@id/dot"
        android:background="@drawable/round_button"
        android:gravity="center_vertical|center_horizontal"
        android:onClick="onClickResult"
        android:text="@string/result"
        android:textColor="@color/white_sign"
        android:textSize="30sp" />

</RelativeLayout>